{
  "name": "json-union",
  "version": "1.3.3",
  "description": "An es6 library used to merge JSON files that match a set of glob patterns",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alpinebreeze/json-union.git"
  },
  "bugs": {
    "url": "https://github.com/alpinebreeze/json-union/issues"
  },
  "homepage": "https://github.com/alpinebreeze/json-union#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "test": "npm run lint && jest --coverage src",
    "build": "tsc",
    "postversion": "git push && git push --tags"
  },
  "author": "Richard Adams",
  "license": "ISC",
  "keywords": [
    "json-union",
    "json",
    "file",
    "merge",
    "union",
    "deep",
    "async",
    "promise",
    "es6",
    "glob"
  ],
  "bin": {
    "jsonUnion": "dist/cli/run.js"
  },
  "files": [
    "dist/**/*",
    "!dist/**/tests"
  ],
  "dependencies": {
    "extend": "3.0.2",
    "glob": "7.1.6",
    "minimist": "1.2.5",
    "mkdirp": "1.0.4"
  },
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@babel/preset-env": "7.9.6",
    "@babel/preset-typescript": "7.9.0",
    "@types/extend": "3.0.1",
    "@types/glob": "7.1.1",
    "@types/jest": "25.2.1",
    "@types/minimist": "1.2.0",
    "@types/mkdirp": "1.0.0",
    "@typescript-eslint/eslint-plugin": "2.33.0",
    "@typescript-eslint/parser": "2.33.0",
    "babel-jest": "26.0.1",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "typescript": "3.9.2"
  }
}
