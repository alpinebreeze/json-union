{
  "name": "json-union",
  "version": "1.3.3",
  "description": "An es6 library used to merge JSON files that match a set of glob patterns",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alpinebreeze/json-union.git"
  },
  "bugs": {
    "url": "https://github.com/alpinebreeze/json-union/issues"
  },
  "homepage": "https://github.com/alpinebreeze/json-union#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist coverage",
    "lint": "tslint src/**/*.ts",
    "pretest": "npm run build",
    "test": "npm run lint && jest --coverage",
    "build": "tsc -p ."
  },
  "author": "Richard Adams",
  "license": "ISC",
  "keywords": [
    "json-union",
    "json",
    "file",
    "merge",
    "union",
    "deep",
    "async",
    "promise",
    "es6",
    "glob"
  ],
  "bin": {
    "jsonUnion": "dist/cli/run.js"
  },
  "dependencies": {
    "extend": "3.0.1",
    "glob": "7.1.2",
    "minimist": "1.2.0",
    "mkdirp": "0.5.1"
  },
  "devDependencies": {
    "@types/extend": "3.0.0",
    "@types/glob": "5.0.35",
    "@types/jest": "22.1.3",
    "@types/minimist": "1.2.0",
    "@types/mkdirp": "0.5.2",
    "@types/node": "8.9.4",
    "jest": "22.4.2",
    "rimraf": "2.6.2",
    "tslint": "5.9.1",
    "typescript": "2.7.2"
  }
}
